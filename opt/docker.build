#!/bin/bash

SCRIPT_DIR=$(dirname `readlink -f $0`)
PROJECT_DIR=$(dirname $SCRIPT_DIR)

if [ "$PROJECT_DIR" = "/" ]; then
  PROJECT_DIR="/pomodoro.cc"
fi

build_container(){
  NAME=$1
  echo ""
  echo ""
  echo ""
  echo "----> BUILDING pomodoro-$NAME"
  docker build -t christianfei/pomodoro-$NAME $PROJECT_DIR/$NAME
}

build_container 'app'
build_container 'api'
build_container 'ws'
